# Portkey Gateway Configuration
# For chat models (OpenRouter via Portkey)
OPENAI_BASE_URL=https://api.portkey.ai/v1
OPENAI_API_KEY=VK_OPENROUTER  # Your Portkey Virtual Key for OpenRouter

# For embeddings (Together via Portkey)
EMBED_BASE_URL=https://api.portkey.ai/v1
EMBED_API_KEY=VK_TOGETHER  # Your Portkey Virtual Key for Together AI

# Request metadata
HTTP_REFERER=http://localhost:3000
X_TITLE=slim-agno

# Embedding Model Configuration (Dual-tier)
# Tier A: Long context, high accuracy (32k tokens)
EMBED_MODEL_A=togethercomputer/m2-bert-80M-32k-retrieval
EMBED_DIM_A=768

# Tier B: Fast, frequent use
EMBED_MODEL_B=BAAI/bge-large-en-v1.5
EMBED_DIM_B=1024

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Dual collection names
WEAVIATE_COLLECTION_A=CodeChunk_A  # High-priority chunks
WEAVIATE_COLLECTION_B=CodeChunk_B  # Standard chunks

# Legacy collection names (backward compatibility)
WEAVIATE_CLASS_CODE=CodeChunk
WEAVIATE_CLASS_DOC=DocChunk

# Development
PLAYGROUND_PORT=7777

# Optional: Override default models for agents
# LEAD_MODEL=anthropic/claude-3.5-sonnet-20241022
# CRITIC_MODEL=google/gemini-2.0-flash-thinking-exp-01-21
# JUDGE_MODEL=openai/gpt-4o
# RUNNER_MODEL=anthropic/claude-3.5-sonnet-20241022
# GENERATOR_MODEL_DEFAULT=anthropic/claude-3.5-sonnet-20241022