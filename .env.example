# Sophia Intel AI - Environment Configuration
# Copy this file to .env and update with your actual values

# ==================== EMBEDDING SERVICES ====================

# Portkey Gateway Configuration
PORTKEY_API_KEY=your_portkey_api_key_here

# Virtual Keys (from Portkey Dashboard)
OPENAI_VK=openai-vk-190a60  # OpenAI virtual key
XAI_VK=xai-vk-e65d0f  # Grok virtual key
OPENROUTER_VK=vkj-openrouter-cc4151  # OpenRouter virtual key
TOGETHER_VK=together-ai-670469  # Together AI virtual key

# Embedding Service Configuration
EMBEDDING_IMPL=agno  # Options: agno, legacy
EMBEDDING_CACHE_ENABLED=true
EMBEDDING_CACHE_TTL=3600
EMBEDDING_BATCH_SIZE=100

# Model Selection (Together AI)
EMBEDDING_PRIMARY_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_FALLBACK_MODELS=BAAI/bge-base-en-v1.5,togethercomputer/m2-bert-80M-8k-retrieval

# ==================== EXISTING SERVICES ====================

# Ollama Configuration
OLLAMA_URL=http://localhost:11434

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8004

# N8N Configuration
N8N_URL=http://localhost:5678

# WebSocket Configuration
MAX_WEBSOCKET_CONNECTIONS=1000
CONNECTION_IDLE_TIMEOUT=300
CONNECTION_CHECK_INTERVAL=30

# Session Configuration
MAX_SESSION_HISTORY=100
SESSION_MEMORY_TTL=3600

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Feature Flags
ENABLE_STRUCTURED_LOGGING=true
ENABLE_DISTRIBUTED_TRACING=false
ENABLE_HEALTH_CHECKS=true
ENABLE_GRACEFUL_DEGRADATION=true

# Performance Settings
DEFAULT_REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100

# ==================== MONITORING ====================

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=sophia-intel-ai
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_TRACES_ENABLED=true
OTEL_METRICS_ENABLED=true

# Prometheus Configuration
PROMETHEUS_PORT=9090

# ==================== DEPLOYMENT ====================

# Environment
ENVIRONMENT=development  # Options: development, staging, production

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ==================== SECURITY ====================

# API Keys (for production, use secrets management)
API_KEY_HASH=your_hashed_api_key_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ==================== DATABASE ====================

# PostgreSQL (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/sophia

# Weaviate Vector Database
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here
