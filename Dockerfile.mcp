FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends curl && rm -rf /var/lib/apt/lists/*

COPY requirements-docker.txt ./
RUN pip install --no-cache-dir -r requirements-docker.txt

COPY mcp_servers ./mcp_servers

ENV MCP_TYPE=memory
ENV MCP_PORT=8081

EXPOSE 8081 8082 8084 8085 8086

HEALTHCHECK --interval=20s --timeout=5s --retries=10 CMD curl -f http://localhost:${MCP_PORT}/health || exit 1

CMD ["python", "mcp_servers/working_servers.py", "${MCP_TYPE}"]

