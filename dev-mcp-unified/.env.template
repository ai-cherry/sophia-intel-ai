# LLM API Keys Configuration Template
# Copy this to .env and fill in your keys

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI Codex/GPT-4
OPENAI_API_KEY=your_openai_key_here

# DeepSeek Coder
DEEPSEEK_API_KEY=your_deepseek_key_here

# Alibaba Qwen
QWEN_API_KEY=your_qwen_key_here

# Additional Optional Keys
LLAMA_API_KEY=your_llama_key_here
GROQ_API_KEY=your_groq_key_here
XAI_API_KEY=your_xai_key_here

# MCP Server Configuration
MCP_PORT=3333
MCP_HOST=127.0.0.1
MCP_CACHE_DIR=~/.mcp/cache
MCP_VECTOR_DIR=~/.mcp/vectors
MCP_LOG_LEVEL=INFO

# Embedding Model Configuration
EMBEDDING_PROVIDER=openai  # openai, cohere, local
EMBEDDING_MODEL=text-embedding-3-small

# Security
ENABLE_KEY_ENCRYPTION=true
KEY_STORAGE_METHOD=keychain  # keychain, encrypted_file, env