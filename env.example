# ============================================
# Unified Agent API Configuration
# ============================================

# Server Configuration
AGENT_API_PORT=8000
PLAYGROUND_URL=http://localhost:7777

# Portkey Virtual Keys (NEVER commit actual keys)
# Get these from your Portkey dashboard
VK_OPENROUTER=your_openrouter_virtual_key_here
VK_TOGETHER=your_together_virtual_key_here

# Portkey Configuration
OPENAI_BASE_URL=https://api.portkey.ai/v1
OPENAI_API_KEY=pk_live_${VK_OPENROUTER}
EMBED_BASE_URL=https://api.portkey.ai/v1
EMBED_API_KEY=pk_live_${VK_TOGETHER}

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# MCP Servers (true/false)
MCP_FILESYSTEM=true
MCP_GIT=true
MCP_SUPERMEMORY=true

# MCP JWT Authentication (production-ready)
MCP_JWT_SECRET=change-me-in-.env.local
# Optional audience override per server; defaults shown in code
# MCP_JWT_AUD=filesystem|git|memory|vector

# Feature Flags
GRAPHRAG_ENABLED=true
HYBRID_SEARCH=true
EVALUATION_GATES=true

# Model Pools
DEFAULT_POOL=balanced  # fast/heavy/balanced

# Observability
ENABLE_TELEMETRY=false
TELEMETRY_ENDPOINT=http://localhost:4318

# Integration APIs (NEVER commit actual tokens - these are placeholders)
# GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_PAT=your_github_pat_here

# Airtable
AIRTABLE_ACCESS_TOKEN=your_airtable_access_token_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
# Optional legacy aliases (some scripts still reference these)
SLACK_BOT_USER_AUTH=${SLACK_BOT_TOKEN}
SLACK_USER_TOKEN=xoxp-your-slack-user-token-here
SLACK_USER_AUTH_TOKEN=${SLACK_USER_TOKEN}
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_VERIFICATION_TOKEN=

# Asana
ASANA_API_CLIENT=your_asana_api_client_id_here
ASANA_CLIENT_SECRET=your_asana_client_secret_here
ASANA_PERSONAL_ACCESS_TOKEN=your_asana_personal_access_token_here

# Linear
LINEAR_API_KEY=your_linear_api_key_here

# Airbyte
AIRBYTE_API_URL=your_airbyte_server_url_here
AIRBYTE_API_KEY=your_airbyte_api_key_here
AIRBYTE_TEST_CONNECTION_ID=your_test_connection_id_here
AIRBYTE_ALLOW_WRITE=false

# HubSpot
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_TEST_EMAIL=test@example.com
HUBSPOT_ALLOW_WRITE=false

# Salesforce
SALESFORCE_CLIENT_ID=your_salesforce_client_id_here
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret_here
SALESFORCE_USERNAME=your_salesforce_username_here
SALESFORCE_PASSWORD=your_salesforce_password_here
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token_here
SALESFORCE_INSTANCE_URL=https://login.salesforce.com
SALESFORCE_ALLOW_WRITE=false

# Intercom
INTERCOM_ACCESS_TOKEN=your_intercom_access_token_here
INTERCOM_TEST_CONTACT_ID=your_test_contact_id_here
INTERCOM_ALLOW_WRITE=false

# Looker
LOOKER_BASE_URL=your_looker_instance_url_here
LOOKER_CLIENT_ID=your_looker_client_id_here
LOOKER_CLIENT_SECRET=your_looker_client_secret_here

# Asana
ASANA_PERSONAL_ACCESS_TOKEN=your_asana_personal_access_token_here

# Linear (already exists above but adding write flag)
LINEAR_ALLOW_WRITE=false

# Gong
GONG_API_KEY=your_gong_api_key_here

# Microsoft Graph
# Use either MICROSOFT_* or MS_*; both are accepted by the code.
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_TENANT_ID=your_microsoft_tenant_id_here
MICROSOFT_SECRET_KEY=your_microsoft_secret_key_here
MICROSOFT_CERTIFICATE_ID=your_microsoft_certificate_id_here
MICROSOFT_SIGNING_CERTIFICATE=your_microsoft_signing_certificate_here
MS_CLIENT_ID=${MICROSOFT_CLIENT_ID}
MS_TENANT_ID=${MICROSOFT_TENANT_ID}
MS_CLIENT_SECRET=${MICROSOFT_SECRET_KEY}

# Auth & API Security
AUTH_TOKEN=your_auth_token_here
ENFORCE_AUTH=true

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database Paths (for local development)
SUPERMEMORY_DB=tmp/supermemory.db
EMBEDDING_CACHE_DB=tmp/embedding_cache.db
KNOWLEDGE_GRAPH_DB=tmp/knowledge_graph.db

# CI/CD (GitHub Actions will override these)
ENVIRONMENT=development
DEPLOY_TARGET=local
