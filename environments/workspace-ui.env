# Workspace UI Frontend Environment Configuration
# This file contains environment variables specific to the workspace-ui frontend

# === Workspace Configuration ===
WORKSPACE_NAME=workspace-ui
WORKSPACE_TYPE=frontend
WORKSPACE_ROOT=/Users/lynnmusil/workspace-ui
WORKSPACE_BACKEND_ROOT=/Users/lynnmusil/sophia-intel-ai

# === Frontend Configuration ===
VITE_APP_NAME=Sophia Workspace UI
VITE_APP_VERSION=1.0.0
VITE_PORT=3000
VITE_HOST=localhost

# === API Endpoints ===
VITE_API_BASE_URL=http://localhost:8000
VITE_API_PREFIX=/api/v1
VITE_WEBSOCKET_URL=ws://localhost:8000/ws

# === MCP Client Configuration ===
# MCP servers accessed via HTTP from frontend
VITE_MCP_MEMORY_URL=http://localhost:8081
VITE_MCP_FILESYSTEM_URL=http://localhost:8082
VITE_MCP_ANALYTICS_URL=http://localhost:8083
VITE_MCP_GIT_URL=http://localhost:8084
VITE_MCP_UNIFIED_URL=http://localhost:8085

# MCP Client Settings
VITE_MCP_CLIENT_TIMEOUT=30000
VITE_MCP_CLIENT_RETRY_COUNT=3
VITE_MCP_CLIENT_RETRY_DELAY=1000
VITE_MCP_CLIENT_MAX_CONNECTIONS=10

# === Extension Integration ===
# Roo Code Extension
VITE_ROO_CODE_ENABLED=true
VITE_ROO_CODE_SOCKET_PORT=9001
VITE_ROO_CODE_API_VERSION=v1

# Cline Bot Extension
VITE_CLINE_BOT_ENABLED=true
VITE_CLINE_BOT_SOCKET_PORT=9002
VITE_CLINE_BOT_API_VERSION=v1

# === UI Configuration ===
VITE_THEME_MODE=system
VITE_DEFAULT_LAYOUT=dual-pane
VITE_ENABLE_SHORTCUTS=true
VITE_ENABLE_TELEMETRY=false

# === Feature Flags ===
VITE_FEATURE_AGNO_AI=true
VITE_FEATURE_MCP_STDIO=true
VITE_FEATURE_MCP_HTTP=true
VITE_FEATURE_REALTIME_SYNC=true
VITE_FEATURE_COLLABORATIVE_EDITING=false

# === Development Settings ===
NODE_ENV=${NODE_ENV:-development}
VITE_DEBUG=${DEBUG:-false}
VITE_LOG_LEVEL=${LOG_LEVEL:-info}
VITE_SOURCE_MAP=true
VITE_HMR_PORT=3001
VITE_HMR_HOST=localhost

# === Build Configuration ===
VITE_BUILD_TARGET=es2020
VITE_CHUNK_SIZE_WARNING=500
VITE_MINIFY=terser
VITE_LEGACY_BROWSER_SUPPORT=false

# === Security Settings ===
VITE_CSP_ENABLED=true
VITE_CORS_CREDENTIALS=include
VITE_SECURE_COOKIES=false
VITE_SAME_SITE=lax

# === Performance Settings ===
VITE_PREFETCH_ENABLED=true
VITE_LAZY_LOAD_IMAGES=true
VITE_SERVICE_WORKER_ENABLED=false
VITE_CACHE_VERSION=v1

# === Analytics Configuration ===
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=${ANALYTICS_ID}
VITE_ERROR_TRACKING_ENABLED=true
VITE_ERROR_TRACKING_DSN=${SENTRY_DSN}

# === Monaco Editor Settings ===
VITE_MONACO_THEME=vs-dark
VITE_MONACO_FONT_SIZE=14
VITE_MONACO_WORD_WRAP=on
VITE_MONACO_MINIMAP=true

# === Node Environment ===
NODE_OPTIONS="--max-old-space-size=4096"
NPM_CONFIG_LEGACY_PEER_DEPS=true